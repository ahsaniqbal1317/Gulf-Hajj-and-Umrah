@model Gulf_Hajj_and_Ummrah.Models.cities_tbl


@using (Html.BeginForm("AddOrEditCities", "Administration", FormMethod.Post))
{
    @Html.HiddenFor(model => model.id)
    <div class="form-group">
        <label>City Name</label>
        @Html.EditorFor(model => model.cityname, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @placeholder = "Enter City Name" } })
        @Html.ValidationMessageFor(model => model.cityname, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>
}
<script src="~/Scripts/jquery.validate.min.js"></script >
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

