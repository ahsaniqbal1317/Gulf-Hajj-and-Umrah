@model IEnumerable<Gulf_Hajj_and_Ummrah.Models.user_tbl>

@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["mesg"] != null)
{
    <div class="alert alert-primary">
        <h4>@TempData["mesg"]</h4>
    </div>
}
<div class="card">
    <div class="card-header bg-dark">
        <div class="row">
            <div class="col-md-6">
                <h4>Users</h4>
            </div>
            <div class="col-md-6">
                <button type="button" style="margin-bottom:10px;float:right;" class="btn btn-primary" onclick="PopupForm(0)"><i class="fas fa-plus"></i> Add New</button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered" id="myTable">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Username
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Address
                    </th>

                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.address)
                        </td>
                        <td>

                            <a class='btn btn-danger btn-sm' onclick="Delete(@item.id)"><i class="fas fa-trash"></i>Delete </a>
                            <a class='btn btn-success btn-sm' onclick="PopupForm(@item.id)"><i class="fas fa-pen"></i>Edit </a>

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
<div class="modal fade bd-example-modal-lg" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-indigo">

                <h5 class="modal-title" id="exampleModalLabel"><i class="fa fa-plus" -></i>Create Profile</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalbody">

            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.min.css">
@section scripts{
    <script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });

        function PopupForm(id) {
            if (id > 0) {
                document.getElementById("exampleModalLabel").innerHTML = "Update Profile";
                $("#exampleModalLabel").removeClass("fa fa-plus");
                $("#exampleModalLabel").addClass("fa fa-pen");
            }
            else {
                document.getElementById("exampleModalLabel").innerHTML = "Create Profile";
                $("#exampleModalLabel").removeClass("fa fa-pen");
                $("#exampleModalLabel").addClass("fa fa-plus");
            }
            var url = "/Administration/AddEditUser?id=" + id;
            var formDiv = $('#modalbody');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                });
            $("#exampleModal").modal("show");
        }
        function Delete(id) {

    if (confirm('Are you sure you want to delete this Record ?')) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("DeleteUser", "Administration")/' + id,
            success: function (data) {
                if (data.success) {

                    location.reload(true);

                    $.notify(data.message, {
                        globalPosition: "top center",
                        className: "success"
                    })

                }
            }
        });
    }
}

    </script>
}

