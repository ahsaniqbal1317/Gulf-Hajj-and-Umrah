@model IEnumerable<Gulf_Hajj_and_Ummrah.Models.flight_details_tbl>

@{
    ViewBag.Title = "FlightDetails";
}

<div class="card">
    <div class="card-header bg-dark">
        <div class="row">
            <div class="col-md-6">
                <h4>Flight Details</h4>
            </div>

        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered" id="myTable">
            <thead>
                <tr>
                    <th>
                        Client Reg No
                    </th>
                    <th>
                        Voucher No
                    </th>
                    <th>
                        Airline Name
                    </th>
                    <th>
                        Departure From
                    </th>

                    <th>
                        Arrived at
                    </th>
                    <th>
                        Date of flight
                    </th>
                    <th>
                        Departure Time
                    </th>
                    <th>
                        Arrival Time
                    </th>

                    <th>
                        Client Details
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.client_details_tbl.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.client_details_tbl.hotelVoucherNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.airline_tbl.airlineName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cities_tbl.cityname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cities_tbl.cityname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.departure_time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.arrival_time)
                    </td>
                    <td>
                        <a href="@Url.Action("ClientDetails","Client")/#@item.client_details_tbl.id" class="nav-link">
                            @Html.DisplayFor(modelItem => item.client_details_tbl.name)
                        </a>
                    </td>
                </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.min.css">
@section scripts{

    @*<script src="~/Scripts/jquery-2.0.1.js"></script>*@
    <script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>
    <script>
$(document).ready(function () {
    $('#myTable').DataTable();
});
    </script>
}

