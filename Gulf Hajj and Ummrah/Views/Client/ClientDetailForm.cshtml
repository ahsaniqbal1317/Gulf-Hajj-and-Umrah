@model Gulf_Hajj_and_Ummrah.Models.client_details_tbl
@{
    ViewBag.Title = "ClientDetailForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Style.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-2 logo">

                    <img src="~/img/form-logo.jpg" class="img-circle elevation-2" alt="User Image" style="width: 100px;">

                </div>
                <div class="col-md-7">
                    <h1 class="text-center" style="padding-top:30px; font-family:'Segoe UI'">
                        Gulf Hajj and Umrah Service (Pvt). Ltd
                    </h1>
                </div>
                <div class="col-md-3" style="padding-top:15px; padding-left:60px;">
                    <div class="picture">
                        <p class="text-center">Photo</p>
                    </div>
                </div>
            </div>
        </div>
       <div class="card-body">
           <div class="row">
               <div class="col-md-12">
                       <h4 class="heading">Client Information Form</h4>
               </div>
           </div>
           
           <div class="row">
               
               <div class="col-md-12">
                   <div class="card-header bg-gray">
                       <p class="subHeading">Personal Info</p>
                   </div>
                       <div class="row ">
                           <table class="table table-bordered">
                               <thead class="text-center">
                                   <tr>
                                       <th>
                                           Name
                                       </th>
                                       <th>
                                           Dispatched to
                                       </th>
                                       <th>
                                           Phone Number
                                       </th>
                                       <th>
                                           Address
                                       </th>
                                       <th>
                                           Date
                                       </th>

                                       <th>
                                           Reference By
                                       </th>

                                   </tr>
                               </thead>
                               <tbody class="text-center">


                                   <tr>
                                       <td>

                                           @Html.DisplayFor(model => model.name)

                                       </td>
                                       <td>
                                           @Html.DisplayFor(model => model.dispatched_to)
                                       </td>
                                       <td>
                                           @Html.DisplayFor(model => model.phone_number)
                                       </td>
                                       <td>
                                           @Html.DisplayFor(model => model.address)
                                       </td>

                                       <td>

                                           @Html.DisplayFor(model => model.date)
                                       </td>
                                       <td>
                                           @Html.DisplayFor(model => model.reference_by)
                                       </td>
                                   </tr>
                               </tbody>
                           </table>
                       </div>
                   
               </div>
               
           </div>
           <div class="row">
               
               <div class="col-md-12">
                   <div class="card-header bg-gray">
                       <p class="subHeading">Group Info</p>
                   </div>
                       <div class="row ">
                           <table class="table table-bordered">
                               <thead class="text-center">
                                   <tr>
                                       <th>
                                           Name of Group Members
                                       </th>
                                       <th>
                                           Passport Number
                                       </th>
                                   </tr>
                               </thead>
                               <tbody class="text-center">
                                   <tr>
                                       <td>

                                           @Html.DisplayFor(model => model.name)

                                       </td>
                                       <td>
                                           @Html.DisplayFor(model => model.dispatched_to)
                                       </td>
                                      
                                   </tr>
                               </tbody>
                           </table>
                       </div>
                   
               </div>
               
           </div>
           <div class="row">
               
               <div class="col-md-12">
                   <div class="card-header bg-gray">
                       <p class="subHeading">Hotel Information</p>
                   </div>
                       <div class="row ">
                           <table class="table table-bordered">
                               <thead class="text-center">
                                   <tr>
                                       <th>
                                           City
                                       </th>
                                       <th>
                                           Hotel Name
                                       </th>
                                       <th>
                                           Room Type
                                       </th>

                                       <th>
                                           Check-In
                                       </th>
                                       <th>
                                           Check-Out
                                       </th>
                                   </tr>
                               </thead>
                               <tbody class="text-center">
                                   <tr>
                                       <td>

                                           @Html.DisplayFor(model => model.name)

                                       </td>
                                       <td>
                                           @Html.DisplayFor(model => model.dispatched_to)
                                       </td>
                                       <td>

                                           @Html.DisplayFor(model => model.name)

                                       </td>
                                       <td>
                                           @Html.DisplayFor(model => model.dispatched_to)
                                       </td>
                                       <td>
                                           @Html.DisplayFor(model => model.dispatched_to)
                                       </td>
                                   </tr>
                               </tbody>
                           </table>
                       </div>
                   
               </div>
               
           </div>
           <div class="row">
               
               <div class="col-md-12">
                   <div class="card-header bg-gray">
                       <p class="subHeading">Flight Details</p>
                   </div>
                       <div class="row ">
                           <table class="table table-bordered">
                               <thead class="text-center">
                                   <tr>
                                       <th>
                                           Date
                                       </th>
                                       <th>
                                           Airline Name
                                       </th>
                                       <th>
                                           Departure From
                                       </th>

                                       <th>
                                           Arrival at
                                       </th>
                                       <th>
                                           Departure Time
                                       </th> 
                                       <th>
                                           Arrival Time
                                       </th>
                                       <th>
                                           PNR
                                       </th>
                                   </tr>
                               </thead>
                               <tbody class="text-center">
                                   <tr>
                                       <td>

                                           @Html.DisplayFor(model => model.date)

                                       </td>
                                       <td>
                                           @Html.DisplayFor(model => model.dispatched_to)
                                       </td>
                                       <td>

                                           @Html.DisplayFor(model => model.name)

                                       </td>
                                       <td>
                                           @Html.DisplayFor(model => model.dispatched_to)
                                       </td>
                                       <td>
                                           @Html.DisplayFor(model => model.dispatched_to)
                                       </td>
                                       <td>
                                           @Html.DisplayFor(model => model.dispatched_to)
                                       </td>
                                       <td>
                                           @Html.DisplayFor(model => model.dispatched_to)
                                       </td>
                                   </tr>
                               </tbody>
                           </table>
                       </div>
                   
               </div>
               
           </div>
           <div class="row">
               
               <div class="col-md-12">
                   <div class="card-header bg-gray">
                       <p class="subHeading">Car Rental/ Tranportion</p>
                   </div>
                       <div class="row ">
                           <table class="table table-bordered">
                               <thead class="text-center">
                                   <tr>
                                       <th>
                                           Date
                                       </th>
                                       <th>
                                           Vechile Type
                                       </th>
                                       <th>
                                          Route
                                       </th>

                                       
                                   </tr>
                               </thead>
                               <tbody class="text-center">
                                   <tr>
                                       <td>

                                           @Html.DisplayFor(model => model.date)

                                       </td>
                                       <td>
                                           @Html.DisplayFor(model => model.dispatched_to)
                                       </td>
                                       <td>

                                           @Html.DisplayFor(model => model.name)

                                       </td>
                                      
                                   </tr>
                               </tbody>
                           </table>
                       </div>
                   
               </div>
               
           </div>
       </div>
    </div>
</div>




